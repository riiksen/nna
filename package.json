{
  "name": "vgoscam",
  "version": "1.0.0",
  "scripts": {
    "build:all": "yarn build:api && yarn build:app",
    "build:api": "cd packages/api && yarn build",
    "build:app": "cd packages/app && yarn build",
    "lint:all": "yarn lint && yarn lint:api && yarn lint:app",
    "lint-n": "eslint --ext .js,.ts,.jsx,.tsx --ignore-pattern node_modules db packages/**",
    "lint": "eslint --ext .js,.ts db knexfile.ts",
    "lint:api": "cd packages/api && yarn lint",
    "lint:app": "cd packages/app && yarn lint",
    "serve:all": "yarn serve:api && yarn serve:app",
    "serve:api": "cd packages/api && yarn serve",
    "serve:app": "",
    "start:all": "yarn start:api && yarn start:app",
    "start:api": "cd packages/api && yarn start",
    "start:app": "cd packages/app && yarn start",
    "test:all": "yarn test:api && yarn test:app",
    "test:api": "cd packages/api && yarn test",
    "test:app": "cd packages/app && yarn test",
    "sequelize": "sequelize"
  },
  "private": true,
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-react-app": "^5.0.2",
    "eslint-plugin-flowtype": "^4.3.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.2",
    "knex": "^0.18.3",
    "ts-node": "~6.1.0",
    "typescript": "~3.4.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
