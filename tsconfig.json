{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2016"],
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "paths": {
      "@config": ["./config/*"],
      "*": [
        "node_modules/*",
        "node_modules/@types/*",
        "types/*"
      ]
    },
    "pretty": true,
    "sourceMap": true,
    "sourceRoot": "root",
    "strict": true,
    "target": "es2017"
  },
  "include": [
    "app/**/*.ts"
  ],
  "exclude": [
    "test/**"
  ]
}
